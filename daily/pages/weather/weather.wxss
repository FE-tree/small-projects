.weather {
  width: 100%;
  /* height: 100%; */
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  position: relative;
  color: #fff;
}

.weather-bg {
  width: 100%;
  height: 100%;
  /* background-color: rgba(18, 150, 219, 0.8); */
  background-image: linear-gradient(45deg, #0081ff, #1cbbb4);
  /* filter: blur(3px); */
  position: absolute;
  z-index: -1;
  top: 0;
  left: 0;
}

.weather-bg image {
  width: 100%;
  height: 100%;
}

.wea-haeder {
  font-size: 24rpx;
  /* display: flex; */
}

.wea-haeder .date {
  float: right;
}

.today {
  text-align: center;
  padding: 30rpx;
}

.today .temp {
  font-size: 150rpx;
  font-weight: 300;
  padding-top: 50rpx;
  /* padding-bottom: 10rpx; */
  display: inline-block;
  position: relative;
}

.today .temp .dot {
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  border: 4rpx solid #fff;
  border-radius: 100%;
  position: absolute;
  top: 75rpx;
  right: -30rpx;
}

.today .desc {
  padding-bottom: 20rpx;
}

.today .pm25 {
  display: inline-block;
  padding: 10rpx 25rpx;
  border-radius: 10rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

.many {
  width: 100%;
  display: flex;
  font-size: 22rpx;
  background-color: rgba(125, 125, 125, 0.2);
  border-radius: 10rpx;
  text-align: center;
}

.many .many-item {
  flex: 1;
  line-height: 1.8;
  padding: 20rpx 0;
}

.live {
  /* border-bottom: 1rpx solid rgba(240, 240, 240, .4); */
  background: rgba(6, 85, 114, 0.1);
  margin: 40rpx 0 20rpx;
}

.live .live-item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid rgba(250, 250, 250, 0.2);
  padding: 20rpx 0;
  margin: 0 30rpx;
}

.live .live-item:last-child {
  border-bottom: none;
}

.live .live-item .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  flex: 1;
}

.live .live-item .right .key {
  font-size: 36rpx;
}

.live .live-item .right .value {
  margin-top: 10rpx;
  font-size: 24rpx;
}

.live .live-icon {
  width: 80rpx;
  height: 80rpx;
  padding: 0 24rpx;
}
